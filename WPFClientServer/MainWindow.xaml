<Window x:Class="WPFClientServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClientServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Image x:Name="ScreenShoot_Image" Height="300" Width="790" Margin="10"  ></Image>
            <Button Width="120" Height="30" Click="Button_Click">Screenshot with UDP</Button>
            <Button Width="120" Height="30" Click="UpUDPServer_Button_Click">Up UDP Server</Button>
        </StackPanel>
    </Grid>
</Window>
